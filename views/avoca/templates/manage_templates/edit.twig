{% extends 'templates/layouts/manage.twig' %}

{% block content %}
    <div id="AvocaProfileRecords">
        {{ form_open('/' ~ _controller ~ '/save') }}
        <div class="card">
            <div class="card-header">{{ title }}</div>
            <div class="card-body">
                <input type="hidden" name="id" value="{{ attribute(record, 'id') }}">
                {% for field, options in recorddefs %}
                    <div class="form-group">
                        <label>{{ options.label ?? field|capitalize|replace({'_': ' '}) }}</label>
                        {{ avoca_form(field, attribute(record, field), options) }}
                    </div>
                {% endfor %}
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary"> Save change </button>
                <a href="{{ avoca_url('/' ~ _controller) }}" class="btn">Cancel</a>
            </div>
        </div>
        {{ form_close() }}
    </div>
{% endblock %}